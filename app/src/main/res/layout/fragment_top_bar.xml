<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/black"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Contenedor del fragmento de selecciÃ³n de modelos, centrado horizontalmente -->
    <FrameLayout
        android:id="@+id/modelFragmentContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_gravity="start"
        />

    <!-- Contenedor del fragmento de usuario, alineado a la derecha -->
    <FrameLayout
        android:id="@+id/userFragmentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_gravity="end" />

</LinearLayout>
