<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Botón principal para mostrar el modelo seleccionado -->
    <Button
        android:id="@+id/modelSelectionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar Modelo"
        android:background="@drawable/button_background"
        android:textColor="@color/white" />

    <!-- Menú desplegable (inicialmente oculto) -->
    <LinearLayout
        android:id="@+id/modelDropdownMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/modelGemini15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gemini 1.5 Flash"
            android:background="@drawable/button_background_secondary"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/modelGemini20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gemini 2.0 Beta"
            android:background="@drawable/button_background_secondary"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/modelDaVinci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Da Vinci"
            android:background="@drawable/button_background_secondary"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>